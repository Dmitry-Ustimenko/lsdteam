@using LeagueSoldierDeathTeam.Site.Classes
@using LeagueSoldierDeathTeam.Site.Controllers
@using LeagueSoldierDeathTeam.Site.Models.Mail
@{
	Layout = "~/Views/Mail/LayoutMail.cshtml";
	var model = (MailPasswordResetModel)ViewBag.Model;
	ViewBag.Subject = "Восстановление пароля";
	var link = WebBuilder.GetFullUrl<AccountController>(o => o.PasswordReset(model.Token));
}
Пожалуйста, используйте <a href="@link">данную ссылку</a> для восстановления вашего пароля. Ссылка действительна в течение одного дня.
