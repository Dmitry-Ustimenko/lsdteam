@helper RenderOverlay(string id)
{
	<div id="@id" class="modal hide"></div>
}

@helper RenderAlert()
{
	<div id="alertOverlay" class="modal hide animated" aria-hidden="true">
		<div class="modal-header">
			<a class="close icon-remove"></a>
			<h3 data-type="modal-title"></h3>
		</div>
		<div class="modal-body">
			<p data-type="modal-message"></p>
		</div>
		<div class="modal-footer">
			<input class="button" id="btnOk" type="button" value="OK">
		</div>
	</div>
}

@helper RenderConfirm()
{
	<div id="confirmOverlay" class="modal hide animated" aria-hidden="true">
		<div class="modal-header">
			<a class="close icon-remove"></a>
			<h3 data-type="modal-title"></h3>
		</div>
		<div class="modal-body">
			<p data-type="modal-message"></p>
		</div>
		<div class="modal-footer">
			<input class="button" id="btnOk" type="button" value="Да">
			<input class="button" id="btnCancel" type="button" value="Нет">
		</div>
	</div>
}
