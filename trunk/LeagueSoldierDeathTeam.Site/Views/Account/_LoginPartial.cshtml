@model LeagueSoldierDeathTeam.Site.Models.Account.LoginModel

@{
	Layout = null;
}

@using (Html.BeginForm())
{
	@Html.ValidationSummary()
	<p class="clearfix">
		@Html.LabelFor(m => m.Email)
		@Html.TextBoxFor(m => m.Email, new { @placeholder = "Введите Email" })
	</p>
	<p class="clearfix">
		@Html.LabelFor(m => m.Password)
		@Html.PasswordFor(m => m.Password, new { @placeholder = "Введите пароль" })
	</p>
	<p class="clearfix">
		@Html.CheckBoxFor(m => m.RememberMe)
		@Html.LabelFor(m => m.RememberMe)
	</p>
	<p class="clearfix">
		<input type="button" value="Войти">
	</p>
}
