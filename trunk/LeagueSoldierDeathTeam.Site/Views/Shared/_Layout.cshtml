<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>LSD Team - @ViewBag.Title</title>
	@{Html.RenderPartial("_Layout.Scripts");}
</head>
<body>
	<div class="wrapper">
		<div class="fixed-top">
			<div class="section section-header section-shadow">
				@{Html.RenderPartial("_LoginPartial");}
			</div>
			<div class="section-menu section-shadow">
				<table class="menu">
					<tbody>
						<tr>
							<td class="dividing-line"></td>
							<td class="menu-cell">
								<a class="menu-link" href="#" onclick="return false;">
									<span>Игры</span>
									<span class="caret"></span>
								</a>
								<div class="menu-drop">
									<a class=" menu-drop-link" href="#">Battlefield 2</a>
									<a class=" menu-drop-link" href="#">Battlefield Bad Company 2</a>
									<a class=" menu-drop-link" href="#">Battlefield 3</a>
									<a class=" menu-drop-link" href="#">Battlefield 4</a>
								</div>
							</td>
							<td class="dividing-line"></td>
							<td class="menu-cell">
								<a class="menu-link" href="#" onclick="return false;">
									<span>Новости</span>
									<span class="caret"></span>
								</a>
								<div class="menu-drop">
									<a class=" menu-drop-link" href="#">Поиск</a>
								</div>
							</td>
							<td class="dividing-line"></td>
							<td class="menu-cell">
								<a class="menu-link" href="#" onclick="return false;">
									<span>Форум</span>
								</a>
								<div class="menu-drop">
									<a class=" menu-drop-link" href="#">Поиск</a>
									<a class="menu-drop-link" href="#">Даты выхода</a>
									<a class="menu-drop-link" href="#">Лучшие игры 2013</a>
								</div>
							</td>
							<td class="dividing-line"></td>
							<td class="menu-cell">
								<a class="menu-link" href="#" onclick="return false;">
									<span>Отзыв</span>
								</a>
								<div class="menu-drop">
									<a class=" menu-drop-link" href="#">Поиск</a>
									<a class="menu-drop-link" href="#">Даты выхода</a>
									<a class="menu-drop-link" href="#">Лучшие игры 2013</a>
								</div>
							</td>
							<td class="search-cell">
								<input class="search-field" name="s" type="text" placeholder="Поиск" id="search_input">
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Dmitry Ustimenko</p>
		</footer>
	</div>
</body>
</html>
