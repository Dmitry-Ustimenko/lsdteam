@using LeagueSoldierDeathTeam.Site.Classes
@using LeagueSoldierDeathTeam.Site.Controllers
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>LSD Team - @ViewBag.Title</title>
	@{Html.RenderPartial("_Layout.Scripts");}
</head>
<body>
	<div class="wrapper">
		<div class="fixed-top">
			@{Html.RenderPartial("_TopMessagePartial");}
			<div class="section section-header section-shadow">
				<div class="emblem">
					<a href="@(WebBuilder.BuildActionUrl<HomeController>(m => m.Index()))"><img src="/Images/emblem.png" /></a>
				</div>
				@{Html.RenderPartial("_AuthenticationPartial");}
				<div class="frostbite-emblem">
					<img class="full-size" src="/Images/frostbite.png" />
				</div>
				<div class="ea-dice-emblem">
					<img class="full-size" src="/Images/EA-DICE.png" />
				</div>
				<div class="team-name-emblem">
					<img class="full-size" src="/Images/team-name.png" />
				</div>
			</div>
			@{Html.RenderPartial("_MenuPartial");}
		</div>
		<div class="section-body">
			@RenderBody()
		</div>
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Dmitry Ustimenko</p>
		</footer>
	</div>
</body>
</html>
